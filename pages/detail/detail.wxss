.main{
  padding: 10rpx;
  color: #666;
}
.video_info{
  margin-top: 10rpx;
}
.video_info video{
  width: 100%
}
.video_title{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.video_detail{
  font-size: 28rpx;
  margin-top: 5rpx;
}
.video_detail .author{
  color: #000;
  margin-right: 5rpx;
}
.video_detail text{
  margin-left: 15rpx;
}
/* 推荐视频 */
.others_list{
  margin-top: 10rpx;
}
.others_item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.others_image{
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.others_image image{
  width: 90%;
  border-radius: 15rpx;
}
.others_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.title{
  font-size: 28rpx;
  color: #e06f93;
}
.msg{
  font-size: 26rpx;
  color: #666;
}
/* 评论列表 */
.comment_warp{
  margin-top: 10rpx
}
.comment_title{
  padding: 10rpx;
  font-size: 28rpx;
}
.comment_list{

}
.comment_item{
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #666;
}
.comment_user{
  flex: 1;
  justify-content: center;
  display: flex;
  align-items: center;
}
.comment_user image{
  width: 60%;
  border-radius: 50%;
}
.comment_info{
  display: flex;
  flex: 5;
  justify-content: space-around;
  flex-direction: column
}
.comment_content{
  font-size: 22rpx;
  color: #000;
  margin-top: 10rpx;
}
.comment_info .author{
  font-size: 24rpx;
  color: #000;
}
.comment_info .date{
  font-size: 22rpx;
  color: #666;
  margin-left: 30rpx
}